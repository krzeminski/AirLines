          <th scope="row"><%=users[i].passenger_id%></th>
          <td><%=users[i].first_name%></td>
          <td><%=users[i].last_name%></td>
          <td><%=users[i].password%></td>
          <td><%=users[i].email%></td>
          <td><%=users[i].phone%></td>
          <td>
            <form action="/users/<%=users[i].passenger_id%>?_method=DELETE" method="POST">
              <input class="btn btn-success btn-sm" type="submit">
            </form>
          </td>
          <td>
            <form action="/users/<%=users[i].passenger_id%>?_method=PUT" method="POST">
              <input type="text" name="password" value="" placeholder="nowe hasÅ‚o">
              <input class="btn btn-success btn-sm" type="submit" >
            </form>
          </td>

        </tr>
      <%}%>


    </tbody>
  </table>

</main>
